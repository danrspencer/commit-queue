#!/usr/bin/env bash

set -e

PROJECT_ROOT=`git rev-parse --show-toplevel`

if ! cmp ${PROJECT_ROOT}/scripts/push-to-queue /usr/local/bin/push-to-queue >/dev/null 2>&1
then
    echo
    echo -e "\033[1;31mYour current version of 'push-to-queue' is out of date! \033[0m"
    echo
    echo -e "\033[1;31mPlease run 'make setup-push-script' to update it\033[0m"
    echo

    exit 1
fi

TIMESTAMP=`date +%s`
CURRENT_BRANCH=`git branch | grep \* | awk '{print $2}'`
PENDING_BRANCH=${CURRENT_BRANCH}-pending-${TIMESTAMP}

PENDING_COMMITS=`git cherry origin/${CURRENT_BRANCH}`

if [[ -z ${PENDING_COMMITS} ]]
then
    echo
    echo "Your branch is up-to-date with 'origin/${CURRENT_BRANCH}'."
    echo

    exit 0
fi

echo
echo -e "\033[1;34mPulling 'origin/${CURRENT_BRANCH}' into local branch... \033[0m"
git pull --rebase

echo
echo -e "\033[1;34mCreating new pending branch... \033[0m"
git checkout -b ${PENDING_BRANCH}

echo
echo -e "\033[1;34mPushing changes... \033[0m"
git push --set-upstream origin ${PENDING_BRANCH}

echo
echo -e "\033[1;34mReturning to '${CURRENT_BRANCH}'... \033[0m"
git checkout ${CURRENT_BRANCH}

echo
echo -e "\033[1;34mCleaning up '${PENDING_BRANCH}'... \033[0m"
git branch -d ${PENDING_BRANCH}

echo
echo -e "\033[1;34mSuccess! Your changes have been pushed to '${PENDING_BRANCH}' \033[0m"
